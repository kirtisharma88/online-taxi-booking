<!DOCTYPE html>
<html lang="en">
<head>
    <title>Taxica - Register</title>
    <%- include('headerfiles') %>
</head>
<body>
<%- include('publicheader') %>

<main class="main">

    <div class="site-breadcrumb" style="background: url(assets/img/breadcrumb/01.jpg)">
        <div class="container">
            <h2 class="breadcrumb-title">Register</h2>
            <ul class="breadcrumb-menu">
                <li><a href="/">Home</a></li>
                <li class="active">Register</li>
            </ul>
        </div>
    </div>


    <div class="login-area py-120">
        <div class="container">
            <div class="col-md-5 mx-auto">
                <div class="login-form">
                    <div class="login-header">
                        <img src="/assets/img/logo/logo.png" alt="">
                        <p>Create your Taxica account</p>
                    </div>
                    <form id="form">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" id="fullname" name="fullname" class="form-control"
                                   placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" name="email" class="form-control" placeholder="Your Email" required data-msg-required="Email is required">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="pass" minlength="6" maxlength="15" id="password" required
                                   data-msg-required="Password is required " class="form-control"
                                   placeholder="Your Password">
                        </div>
                        <div class="form-group">
                            <label>Phone No.</label>
                            <input type="text" minlength="10" maxlength="13" id="phone" name="phone" required
                                   data-msg-required="Phone is required " class="form-control"
                                   placeholder="Your Phone No." data-rule-number="true">
                        </div>

                        <div class="form-check form-group">
                            <input class="form-check-input" type="checkbox" checked id="agree">
                            <label class="form-check-label" for="agree">
                                I agree with the <a href="#">Terms Of Service.</a>
                            </label>
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="button" onclick="signup()" class="theme-btn"><i
                                        class="far fa-paper-plane"></i> Register
                            </button>
                            <div id="output"></div>
                        </div>
                    </form>
                    <div class="login-footer">
                        <p>Already have an account? <a href="/userlogin">Login.</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include('footer') %>
<%- include('footer-scripts') %>
<script src="/dist/jquery.validate.js"></script>
<script>
    let signup = () => {
        $("#form").validate();
        if ($("#form").valid()) {
            var elements = document.getElementById("form").elements;
            var formdata = new FormData();
            for (let i = 0; i < elements.length; i++) {
                if (elements[i].type != "button")
                    formdata.append(elements[i].name, elements[i].value)
            }
            var http = new XMLHttpRequest();
            http.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    alert(this.response);
                    /*if (this.response == "inserted") {
                        document.getElementById("form").reset();
                        document.getElementById("output").innerHTML = "user added successfully";
                    }
                    else{
                        document.getElementById("output").innerHTML = "user already exists";

                    }*/
                }
            }
            http.open("post", "/adduseraction", true);
            http.send(formdata);
        }
    }

</script>
</body>
</html>